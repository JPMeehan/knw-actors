<footer class='flexrow'>
  <div class='damage'>
    <label>
      {{numberInput system.dmg name='system.dmg' min=0}}
      <p class='label'>
        {{localize 'KNW.Warfare.Statistics.dmg.abbr'}}
      </p>
    </label>
  </div>
  <div class='addOns'>
    <nav class='sheet-navigation tabs'>
      {{#each tabs as |tab key|}}
      <a class='label {{tab.cssClass}}' data-tab='{{tab.id}}' data-group="primary" data-action="tab">
        {{localize tab.label}}
      </a>
      {{/each}}
    </nav>
    <section class='tabs-body'>
      <div class='tab {{tabs.traits.cssClass}}' data-group='primary' data-tab='traits'>
        <ul class='traitList' data-action="configureTraits">
          {{#each traits as |trait|}}
          <li>{{trait}}</li>
          {{/each}}
        </ul>
      </div>
      <div class='tab {{tabs.items.cssClass}}' data-group='primary' data-tab='items'>
        <ul class='itemList'>
          {{#each items as |item|}}
          <li class='item flexrow' data-embedded-name="Item" data-item-id='{{item._id}}'>
            <div class='item-name flexrow'>
              <img class='item-image' src='{{item.img}}' />
              <h4 data-tooltip='{{{item.system.description.value}}}'>{{item.name}}</h4>
            </div>
            <div class='item-controls flexrow'>
              <a class='item-control' data-action="controlEmbedded" data-control='edit' data-tooltip='DND5E.ItemEdit'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control' data-action="controlEmbedded" data-control='delete' data-tooltip='DND5E.ItemDelete'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class='tab {{tabs.effects.cssClass}}' data-group='primary' data-tab='effects'>
        <ul class='effectList scrollable'>
          {{#each effects as |effect|}}
          <li class='effect flexrow' data-embedded-name="ActiveEffect" data-effect-id='{{effect._id}}'>
            <div class='effect-name flexrow'>
              <img class='effect-image' src='{{effect.img}}' />
              <h4 data-tooltip='{{{effect.description}}}'>
                {{#unless effect.disabled}}
                <strong>
                  {{effect.name}}
                </strong>
                {{else}}
                {{effect.name}}
                {{/unless}}
              </h4>
            </div>
            <div class='effect-controls flexrow'>
              <a class='effect-control' data-action="controlEmbedded" data-control='toggle' data-tooltip='DND5E.EffectToggle'>
                {{#if effect.disabled}}
                <i class='fas fa-check'></i>
                {{else}}
                <i class='fas fa-times'></i>
                {{/if}}
              </a>
              <a class='effect-control' data-action="controlEmbedded" data-control='edit' data-tooltip='DND5E.EffectEdit'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='effect-control' data-action="controlEmbedded" data-control='delete' data-tooltip='DND5E.EffectDelete'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          </li>
          {{/each}}
          <li class='effect flexrow create'>
            <a class='effect-create' data-embedded-name="ActiveEffect" data-action="createEmbedded" data-tooltip='DND5E.EffectCreate'>
              <i class='fas fa-plus'></i>{{localize 'DND5E.Add'}}
            </a>
          </li>
        </ul>
      </div>
    </section>
  </div>
  <div class='tier'>
    <label>
      <select name='system.tier'>
        {{selectOptions choices.TIER selected=system.tier}}
      </select>
      <p class='label'>{{localize 'KNW.Warfare.Tier'}}</p>
    </label>
  </div>
</footer>
