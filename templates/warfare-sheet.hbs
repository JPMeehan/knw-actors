<form class="{{cssClass}} flexcol">
  <div class="header flexrow">
    <div class="type">
      {{system.type}}
    </div>
    <div class="description flexcol">
      <div class="id flexrow">
        <img
          class="profile"
          src="{{actor.img}}"
          data-tooltip="{{actor.name}}"
          data-edit="img"
        />
        <input
          type="text"
          name="name"
          value="{{actor.name}}"
          placeholder="{{localize 'DND5E.Name'}}"
        />
      </div>
      <div class="tags flexcol">
        <div class="commander">
          <label class="flexrow">
            <span class="label">{{localize "KNW.Warfare.Commander"}}</span>
            <input
              type="text"
              name="system.commander"
              value="{{system.commander}}"
            />
          </label>
        </div>
        <div class="modifiers flexrow">
          <select name="system.experience">
            {{selectOptions
              choices.EXPERIENCE
              selected=system.experience
              localize=true
            }}
          </select>
          <select name="system.gear">
            {{selectOptions choices.GEAR selected=system.gear localize=true}}
          </select>
          <input
            type="text"
            name="system.ancestry"
            value="{{system.ancestry}}"
            placeholder="{{localize 'KNW.Warfare.Ancestry'}}"
          />
          <select name="system.type">
            {{selectOptions choices.TYPE selected=system.type localize=true}}
          </select>
        </div>
      </div>
    </div>
    <div class="size flexcol">
      {{numberInput system.size.value name="system.size.value" min=0}}
      {{numberInput system.size.max name="system.size.max" min=0}}
      <span class="label">{{localize "KNW.Warfare.Size"}}</span>
    </div>
  </div>
  <div class="statistics flexrow">
    <div class="attacks" data-tooltip="{{localize "KNW.Warfare.Statistics.attacks.long"}}">
      {{numberInput system.attacks name="system.attacks" min=0}}
    </div>
    {{#each coreStats}}
      <div class="coreStat flexcol">
        <div class="label {{this.rollable}}" data-target="{{@key}}">
            {{this.label}}
        </div>
        <div class="value">
          <input class="{{this.rollable}}" type="number" name="system.{{@key}}" value={{this.value}} />
        </div>
      </div>
    {{/each}}
  </div>
  <div class="footer flexrow">
    <div class="damage">
      <label class="flexcol">
        {{numberInput system.dmg name="system.dmg" min=0}}
        <span class="label">
          {{localize "KNW.Warfare.Statistics.dmg.abbr"}}
        </span>
      </label>
    </div>
    <div class="traits">
        <span class="label">{{localize "KNW.Warfare.Traits.SheetLabel"}}</span>
        <ul>
            {{#each traits}}
                <li>{{@this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="tier">
      <label class="flexcol">
        <select name="system.tier">
            {{selectOptions choices.TIER selected=system.tier}}
        </select>
        <span class="label">{{localize "KNW.Warfare.Tier"}}</span>
      </label>
    </div>
  </div>
</form>